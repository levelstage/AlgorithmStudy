{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "G++ 컴파일 및 실행",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/C",
                "g++ -g ${file} -o ${fileDirname}\\${fileBasenameNoExtension}.exe && ${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}